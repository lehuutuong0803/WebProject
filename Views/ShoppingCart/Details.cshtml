@model IEnumerable<WebProject.Models.DetailedInvoice>
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center">Chi tiết hóa đơn</h2>


<table class="table table-hover table-secondary table-striped">
    <tr>
        <th>
            Tên Món
        </th>
        <th>
            Id Loại Món Ăn
        </th>
        <th>
            Hình Ảnh
        </th>
        <th>
            Số lượng
        </th>
        <th> Thành Tiền </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Food.FoodName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IDFood)
            </td>
            <td>
                <img src="~/images/@item.Food.Image" class="img-fluid" alt="Image" style="width:50px;height:50px">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IntoMoney)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.IDInvoice }) |
                @Html.ActionLink("Xóa", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
    }
</table>

