</head>
@{
    var text = "Đăng Nhập";
    var hre = "/SignIn/Login";
    var cart_show = "none";

    if (Session["Status"] != null) { text = "Đăng Xuất"; hre = "/SignIn/Logout"; cart_show = "normal"; }
}
<body>
    <div style="display:none;">
        <div class="g-signin2" data-onsuccess="onSignIn"></div>
        <a href="#" class="btn" onclick="signOut();"></a>
    </div>
    <div id="shared-body-1">
        <div id="cart_button">
            <button class="btn bg-transparent " style="display:@cart_show;">
                @Html.ActionLink(" ", "..//ShoppingCart/ShowToCart", null, new { @class = "fa fa-shopping-cart fa-lg" })
                @Html.Action("BagCart", "ShoppingCart", new { @class = "bg-danger" })

            </button>
        </div>

        <header class="top-navbar">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container">
                    <a class="navbar-brand" href="~/Home/Index">
                        <img src="~/images/logo.png" alt="" />
                    </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbars-rs-food" aria-controls="navbars-rs-food" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbars-rs-food">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item active">
                                <a class="nav-link" href="~/Home/Index">Trang Chủ</a>
                            </li>
                            <li class="nav-item"><a class="nav-link" href="~/Home/Menu">Menu</a></li>
                            <li class="nav-item">
                                <a class="nav-link" href="~/Home/History">Lịch Sử</a>
                            </li>                          
                            <li class="nav-item">
                                <a class="nav-link" href="~/Home/Contact">Liên Hệ</a>
                            </li>
                            <li class="nav-item">
                                <div style="display:@cart_show;">
                                    <a class="nav-link" href="~/selfUser/Details/@Session["UserIDCTM"]">@Session["CustomerName"]  <i class="fa fa-user"></i></a>
                                </div>
                            </li>
                            <li class="nav-item" onclick="signOut();">
                                <a onclick="signOut();" class="nav-link" href=@hre>@text <a>
                            </li>

                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <br /><br /><br /><br /><br />
    </div>
    @RenderBody()



    <!-- End Customer Reviews -->
    <!-- Start Contact info -->
    <div id="shared-body-2">
        <div class="contact-imfo-box">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 arrow-right">
                        <i class="fa fa-volume-control-phone"></i>
                        <div class="overflow-hidden">
                            <h4>Điện Thoại</h4>
                            <p class="lead">
                                +03 447 468 135
                            </p>
                        </div>
                    </div>
                    <div class="col-md-4 arrow-right">
                        <i class="fa fa-envelope"></i>
                        <div class="overflow-hidden">
                            <h4>Email</h4>
                            <p class="lead">
                                LiveDinner@gmail.com
                            </p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <i class="fa fa-map-marker"></i>
                        <div class="overflow-hidden">
                            <h4>Địa Chỉ</h4>
                            <p class="lead">
                                6a, Linh Tây, Thủ Đức
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Contact info -->
        <!-- Start Footer -->
        <footer class="footer-area bg-f">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-6">
                        <h3>Về Chúng Tôi</h3>
