@model IEnumerable<WebProject.Models.DetailedInvoice>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh sách hóa đơn</h2>

<p>
    <button type="button" class="btn btn-danger">@Html.ActionLink("Tạo mới", "Create")</button>
</p>
<table class="table table-hover table-secondary table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IntoMoney)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Food.FoodName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Invoice.Note)
        </th>
        <th> Tác vụ </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IntoMoney)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Food.FoodName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Invoice.Note)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Chi tiết", "Details", new {  id=item.IDInvoice  }) |
                @Html.ActionLink("Xóa", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
    }

</table>
